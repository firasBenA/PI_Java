<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="rootPane" prefHeight="501.0" prefWidth="778.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="AppController">
    <!-- Left Sidebar (Hamburger Menu) -->
    <left>
        <StackPane fx:id="sidebarContainer">
            <VBox fx:id="sidebar" alignment="CENTER" spacing="10" style="-fx-padding: 10;" translateX="-200">
                <Button fx:id="member1Button" onAction="#showMember1Content" prefWidth="100" text="Khaoula" />
                <Button fx:id="member2Button" onAction="#showMember2Content" prefWidth="100" text="Rayen" />
                <Button fx:id="member3Button" onAction="#showMember3Content" prefWidth="100" text="Firas" />
                <Button fx:id="eventsButton" onAction="#showEventsSidebar" prefWidth="100" text="Houssem" />
                <Button fx:id="member5Button" onAction="#showMember5Content" prefWidth="100" text="Mechket" />
                <Button fx:id="member6Button" onAction="#showMember6Content" prefWidth="100" text="Omara" />
            </VBox>
        </StackPane>
    </left>

    <!-- Center Content Area -->
    <center>
        <StackPane fx:id="contentPane">
            <!-- Default Content -->
            <Label fx:id="defaultLabel" style="-fx-font-size: 14px;" text="Select a member or section to view content" />
        </StackPane>
    </center>

    <!-- Top Bar -->
    <top>
        <HBox alignment="CENTER_RIGHT" style="-fx-padding: 10;">
            <children>
                <Button fx:id="hamburgerButton" onAction="#toggleSidebar" style="-fx-font-size: 16px;" text="â˜°" HBox.hgrow="NEVER" />
                <Pane HBox.hgrow="ALWAYS" />
            </children>
        </HBox>
    </top>
</BorderPane>
