<ScrollPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.controllers.PatientDashboardController"
            fitToWidth="true"
            style="-fx-background-color: #f8f9fa;">

    <stylesheets>
        <URL value="@/css/patient.css"/>
    </stylesheets>

    <padding>
        <Insets bottom="20" left="20" right="20" top="20"/>
    </padding>
    <content>
        <VBox spacing="20" alignment="TOP_CENTER">

            <!-- Header Section -->
            <HBox alignment="CENTER_LEFT" spacing="20" styleClass="header-box">
                <!-- Profile Picture with Edit Button -->
                <StackPane>
                    <Circle fill="WHITE" radius="50" stroke="#ddd" strokeWidth="2">
                        <effect>
                            <DropShadow color="rgba(0,0,0,0.2)" radius="5" spread="0.1"/>
                        </effect>
                    </Circle>
                    <ImageView fx:id="profileImage" fitHeight="90" fitWidth="90" pickOnBounds="true"
                               preserveRatio="true">
                        <clip>
                            <Circle centerX="45" centerY="45" radius="45"/>
                        </clip>
                    </ImageView>
                    <Button fx:id="changeImageBtn" onAction="#handleChangeImage" styleClass="edit-profile-btn"
                            text="Modifier"
                            StackPane.alignment="BOTTOM_CENTER"/>
                </StackPane>

                <!-- Welcome Message -->
                <VBox spacing="5">
                    <Text styleClass="dashboard-title" text="Tableau de Bord Patient"/>
                    <Label fx:id="welcomeLabel" styleClass="welcome-label"/>
                    <Label fx:id="ageLabel" styleClass="info-label"/>
                </VBox>

                <!-- Spacer -->
                <Region HBox.hgrow="ALWAYS"/>

                <!-- Navigation and Logout Buttons -->
                <HBox alignment="CENTER_RIGHT" spacing="10">
                    <Button fx:id="appointmentsBtn" onAction="#handleShowAppointments" styleClass="nav-btn"
                            text="Mes Rendez-vous"/>
                    <Button fx:id="prescriptionsBtn" onAction="#handleShowPrescriptions" styleClass="nav-btn"
                            text="Mes Ordonnances"/>
                    <Button fx:id="deconnexionBtn" onAction="#handleDeconnexion" styleClass="logout-btn"
                            text="DÃ©connexion"/>
                </HBox>
                <HBox spacing="5" alignment="CENTER">
                    <Button fx:id="cartButton" onAction="#handleOpenCart" text="ðŸ›’" styleClass="nav-btn"/>
                    <Label fx:id="cartCountLabel" text="0" styleClass="cart-count-label"/>
                </HBox>

            </HBox>

            <!-- Main Content - Split into two columns -->
            <HBox alignment="TOP_CENTER" spacing="20">
                <!-- Left Column - Personal Info -->
                <VBox prefWidth="400" spacing="15" styleClass="info-card">
                    <Text styleClass="section-title" text="Informations Personnelles"/>

                    <GridPane hgap="15" vgap="10">
                        <columnConstraints>
                            <ColumnConstraints halignment="RIGHT" prefWidth="120"/>
                            <ColumnConstraints halignment="LEFT" prefWidth="250"/>
                        </columnConstraints>

                        <!-- Nom -->
                        <Label styleClass="field-label" text="Nom:" GridPane.rowIndex="0"/>
                        <VBox spacing="2" GridPane.columnIndex="1" GridPane.rowIndex="0">
                            <TextField fx:id="nomField" styleClass="form-field"/>
                            <Label fx:id="nomErrorLabel" styleClass="error-label"/>
                        </VBox>

                        <!-- PrÃ©nom -->
                        <Label styleClass="field-label" text="PrÃ©nom:" GridPane.rowIndex="1"/>
                        <VBox spacing="2" GridPane.columnIndex="1" GridPane.rowIndex="1">
                            <TextField fx:id="prenomField" styleClass="form-field"/>
                            <Label fx:id="prenomErrorLabel" styleClass="error-label"/>
                        </VBox>

                        <!-- Email -->
                        <Label styleClass="field-label" text="Email:" GridPane.rowIndex="2"/>
                        <VBox spacing="2" GridPane.columnIndex="1" GridPane.rowIndex="2">
                            <TextField fx:id="emailField" editable="false" styleClass="form-field"/>
                            <Label fx:id="emailErrorLabel" styleClass="error-label"/>
                        </VBox>

                        <!-- TÃ©lÃ©phone -->
                        <Label styleClass="field-label" text="TÃ©lÃ©phone:" GridPane.rowIndex="3"/>
                        <VBox spacing="2" GridPane.columnIndex="1" GridPane.rowIndex="3">
                            <TextField fx:id="telephoneField" styleClass="form-field"/>
                            <Label fx:id="telErrorLabel" styleClass="error-label"/>
                        </VBox>

                        <!-- Adresse -->
                        <Label styleClass="field-label" text="Adresse:" GridPane.rowIndex="4"/>
                        <VBox spacing="2" GridPane.columnIndex="1" GridPane.rowIndex="4">
                            <TextArea fx:id="adresseField" prefHeight="16.0" prefWidth="250.0"
                                      styleClass="form-textarea"
                                      wrapText="true"/>
                            <Label fx:id="adresseErrorLabel" styleClass="error-label"/>
                        </VBox>

                        <!-- Ã‚ge -->
                        <Label text="Ã‚ge:" styleClass="field-label" GridPane.rowIndex="6"/>
                        <VBox GridPane.columnIndex="1" GridPane.rowIndex="6" spacing="2">
                            <TextField fx:id="ageField" styleClass="form-field"/>
                            <Label fx:id="ageErrorLabel" styleClass="error-label"/>
                        </VBox>

                        <!-- Sexe -->
                        <Label styleClass="field-label" text="Sexe:" GridPane.rowIndex="5"/>
                        <VBox spacing="2" GridPane.columnIndex="1" GridPane.rowIndex="5">
                            <ComboBox fx:id="sexeComboBox" prefHeight="25.0" prefWidth="142.0" styleClass="form-field"/>
                            <Label fx:id="sexeErrorLabel" styleClass="error-label"/>
                        </VBox>
                        <rowConstraints>
                            <RowConstraints/>
                            <RowConstraints/>
                            <RowConstraints/>
                            <RowConstraints/>
                            <RowConstraints/>
                            <RowConstraints/>
                        </rowConstraints>
                    </GridPane>

                    <!-- Action Buttons -->
                    <HBox alignment="CENTER" spacing="15">
                        <Button fx:id="modifierBtn" onAction="#handleModification" styleClass="primary-btn"
                                text="Modifier Profil"/>
                        <Button fx:id="supprimerBtn" onAction="#handleSuppression" styleClass="danger-btn"
                                text="Supprimer Compte"/>
                    </HBox>
                </VBox>

                <!-- Right Column - Medical Info and Quick Actions -->
                <VBox prefWidth="400" spacing="15" styleClass="info-card">
                    <Text styleClass="section-title" text="Informations MÃ©dicales"/>

                    <!-- Medical Summary -->
                    <VBox spacing="10" styleClass="medical-summary">
                        <Label styleClass="field-label" text="Ã‚ge:"/>
                        <Label fx:id="ageValueLabel" styleClass="medical-info-label"/>

                        <Label styleClass="field-label" text="CoordonnÃ©es:"/>
                        <HBox spacing="5">
                            <Label styleClass="field-label" text="Lat:"/>
                            <Label fx:id="latitudeLabel" styleClass="medical-info-label"/>
                            <Label styleClass="field-label" text="Long:"/>
                            <Label fx:id="longitudeLabel" styleClass="medical-info-label"/>
                        </HBox>
                    </VBox>

                    <!-- Quick Actions -->
                    <VBox spacing="10">
                        <Text styleClass="section-title" text="Actions Rapides"/>
                        <HBox alignment="CENTER" spacing="10">
                            <Button fx:id="newAppointmentBtn" onAction="#handleNewAppointment"
                                    styleClass="quick-action-btn"
                                    text="Nouveau RDV"/>
                            <Button fx:id="emergencyBtn" onAction="#handleEmergency" styleClass="emergency-btn"
                                    text="Urgence"/>
                        </HBox>
                    </VBox>

                    <!-- Upcoming Appointments -->
                    <VBox spacing="10">
                        <Text styleClass="section-title" text="Prochains Rendez-vous"/>
                        <ListView fx:id="appointmentsList" styleClass="appointments-list">
                            <placeholder>
                                <Label styleClass="placeholder-label" text="Aucun rendez-vous prÃ©vu"/>
                            </placeholder>
                        </ListView>
                    </VBox>
                </VBox>
            </HBox>

            <!-- Status Message -->
            <!-- Status Message -->
            <Label fx:id="messageLabel" styleClass="status-message">
                <padding>
                    <Insets bottom="10" left="10" right="10" top="10"/>
                </padding>
            </Label>
            <Label text="Boutique" styleClass="section-title"/>

            <FlowPane fx:id="productFlowPane" hgap="20" vgap="20">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
            </FlowPane>

        </VBox>
    </content>
</ScrollPane>