<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane style="-fx-background-color: #f0f0f0;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.EventDetailsController">
    <center>
        <VBox alignment="CENTER" spacing="15" stylesheets="@../styles/styles.css">
            <!-- Title -->
            <Label fx:id="titleLabel" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

            <!-- Event Details and QR Code in HBox -->
            <HBox alignment="CENTER" spacing="20">
                <!-- Event Details -->
                <VBox fx:id="detailsBox" alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #f9f9f9; -fx-padding: 10; -fx-border-color: #dcdcdc; -fx-border-width: 1; -fx-border-radius: 5; -fx-background-radius: 5;">
                    <Label fx:id="nomLabel" style="-fx-font-size: 14px; -fx-text-fill: #34495e;" wrapText="true" />
                    <Label fx:id="contenueLabel" style="-fx-font-size: 14px; -fx-text-fill: #34495e;" wrapText="true" />
                    <Label fx:id="typeLabel" style="-fx-font-size: 14px; -fx-text-fill: #34495e;" wrapText="true" />
                    <Label fx:id="statutLabel" style="-fx-font-size: 14px; -fx-text-fill: #34495e;" wrapText="true" />
                    <Label fx:id="lieuxLabel" style="-fx-font-size: 14px; -fx-text-fill: #34495e;" wrapText="true" />
                    <Label fx:id="dateLabel" style="-fx-font-size: 14px; -fx-text-fill: #34495e;" wrapText="true" />
                </VBox>

                <!-- QR Code -->
                <VBox alignment="CENTER" spacing="10">
                    <Text style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-fill: #2c3e50;" text="QR Code" />
                    <ImageView fx:id="qrCodeImageView" fitHeight="150" fitWidth="150" preserveRatio="true" />
                </VBox>
            </HBox>

            <!-- Related Articles Section -->
            <VBox fx:id="relatedArticlesSection" alignment="CENTER" spacing="10">
                <Text style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-fill: #2c3e50;" text="Articles Associés" />
                <Button fx:id="showRelatedArticlesButton" onAction="#showRelatedArticles" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8 16; -fx-background-radius: 5;" text="Afficher les Articles Associés" />
                <ScrollPane fx:id="relatedArticlesScrollPane" prefHeight="150" prefWidth="600" style="-fx-background-color: transparent;" visible="false">
                    <HBox fx:id="relatedArticlesBox" alignment="CENTER" spacing="10" />
                </ScrollPane>
            </VBox>

            <!-- Map Placeholder -->
            <VBox alignment="CENTER" prefHeight="282.0" prefWidth="399.0" spacing="10">
                <Text style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-fill: #2c3e50;" text="Maps" />
                <StackPane fx:id="mapPlaceholder" prefHeight="250" prefWidth="504.0" style="-fx-background-color: #ecf0f1; -fx-border-color: #dcdcdc; -fx-border-width: 1; -fx-border-radius: 5; -fx-background-radius: 5;">
                    <Label style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;" text="Map placeholder" />
                </StackPane>
            </VBox>

            <!-- Weather Placeholder -->
            <HBox fx:id="weatherBox" alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #ecf0f1; -fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #dcdcdc; -fx-border-width: 1;">
                <padding>
                    <Insets bottom="10" left="10" right="10" top="10" />
                </padding>
                <ImageView fx:id="weatherIcon" fitHeight="40" fitWidth="40" preserveRatio="true" />
                <Label fx:id="weatherLabel" style="-fx-font-size: 14px; -fx-text-fill: #34495e;" text="Weather data" />
            </HBox>

            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
        </VBox>
    </center>
</BorderPane>