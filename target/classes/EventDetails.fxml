<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<BorderPane xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.EventDetailsController" style="-fx-background-color: #f0f0f0;">
    <top>
        <VBox spacing="10" style="-fx-padding: 20;">
            <Label fx:id="titleLabel" text="Détails de l'Événement" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
        </VBox>
    </top>

    <center>
        <GridPane hgap="20" vgap="20" style="-fx-padding: 20;">
            <!-- Event Details -->
            <VBox fx:id="detailsBox" GridPane.rowIndex="0" GridPane.columnIndex="0" spacing="10" style="-fx-background-color: #ffffff; -fx-padding: 15; -fx-border-color: #dcdcdc; -fx-border-width: 1; -fx-border-radius: 5; -fx-background-radius: 5;">
                <Label text="Détails de l'Événement" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                <Label fx:id="nomLabel" style="-fx-font-size: 14px; -fx-text-fill: #34495e;"/>
                <Label fx:id="contenueLabel" style="-fx-font-size: 14px; -fx-text-fill: #34495e;" wrapText="true"/>
                <Label fx:id="typeLabel" style="-fx-font-size: 14px; -fx-text-fill: #34495e;"/>
                <Label fx:id="statutLabel" style="-fx-font-size: 14px; -fx-text-fill: #34495e;"/>
                <Label fx:id="lieuxLabel" style="-fx-font-size: 14px; -fx-text-fill: #34495e;"/>
                <Label fx:id="dateLabel" style="-fx-font-size: 14px; -fx-text-fill: #34495e;"/>
            </VBox>

            <!-- QR Code -->
            <VBox GridPane.rowIndex="0" GridPane.columnIndex="1" spacing="10" style="-fx-background-color: #ffffff; -fx-padding: 15; -fx-border-color: #dcdcdc; -fx-border-width: 1; -fx-border-radius: 5; -fx-background-radius: 5;" alignment="CENTER">
                <Label text="QR Code" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                <ImageView fx:id="qrCodeImage" fitWidth="150" fitHeight="150"/>
                <Label text="[Placeholder: QR Code]" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;"/>
            </VBox>

            <!-- Related Articles (Button and Container) -->
            <VBox fx:id="relatedArticlesSection" GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.columnSpan="2" spacing="10" style="-fx-background-color: #ffffff; -fx-padding: 15; -fx-border-color: #dcdcdc; -fx-border-width: 1; -fx-border-radius: 5; -fx-background-radius: 5;">
                <Label text="Articles Associés" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                <Button fx:id="showRelatedArticlesButton" text="Voir les Articles Associés" onAction="#showRelatedArticles" style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
                <ScrollPane fx:id="relatedArticlesScrollPane" fitToWidth="true" fitToHeight="true" visible="false">
                    <HBox fx:id="relatedArticlesBox" spacing="20" style="-fx-padding: 10;"/>
                </ScrollPane>
            </VBox>

            <!-- Maps -->
            <VBox GridPane.rowIndex="2" GridPane.columnIndex="0" spacing="10" style="-fx-background-color: #ffffff; -fx-padding: 15; -fx-border-color: #dcdcdc; -fx-border-width: 1; -fx-border-radius: 5; -fx-background-radius: 5;" alignment="CENTER">
                <Label text="Carte" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                <ImageView fx:id="mapImage" fitWidth="300" fitHeight="200"/>
                <Label text="[Placeholder: Carte]" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;"/>
            </VBox>

            <!-- Weather -->
            <VBox GridPane.rowIndex="2" GridPane.columnIndex="1" spacing="10" style="-fx-background-color: #ffffff; -fx-padding: 15; -fx-border-color: #dcdcdc; -fx-border-width: 1; -fx-border-radius: 5; -fx-background-radius: 5;" alignment="CENTER">
                <Label text="Météo" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                <Label fx:id="weatherLabel" text="[Placeholder: Météo]" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;"/>
            </VBox>
        </GridPane>
    </center>
</BorderPane>