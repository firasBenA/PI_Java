<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.ListView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" spacing="10" alignment="CENTER" style="-fx-background-color: #f0f0f0;" fx:controller="tn.esprit.controllers.ChatbotController">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <ScrollPane fitToWidth="true" fitToHeight="true" VBox.vgrow="ALWAYS">
        <content>
            <ListView fx:id="chatListView" style="-fx-background-color: white;"/>
        </content>
    </ScrollPane>
    <HBox spacing="5" alignment="CENTER">
        <TextField fx:id="userInputField" promptText="Type your message..." HBox.hgrow="ALWAYS"/>
        <Button fx:id="sendButton" text="Send" onAction="#sendMessage"/>
    </HBox>
</VBox>