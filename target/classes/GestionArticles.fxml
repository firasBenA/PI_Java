<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane fx:id="contentArea" fitToWidth="true" fitToHeight="true" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.GestionArticles">
    <content>
        <VBox fx:id="contentVBox" spacing="10" style="-fx-padding: 10;">
            <children>
                <Label fx:id="titleLabel" text="Articles" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                <GridPane fx:id="articlesGrid" hgap="20" vgap="20" style="-fx-padding: 10;" />
                <HBox fx:id="paginationControls" spacing="10" alignment="CENTER">
                    <Button fx:id="prevButton" text="Précédent" onAction="#previousPage" style="-fx-background-color: #3498db; -fx-text-fill: white;" />
                    <Label fx:id="pageLabel" text="Page 1 / 1" style="-fx-font-size: 14px; -fx-text-fill: #34495e;" />
                    <Button fx:id="nextButton" text="Suivant" onAction="#nextPage" style="-fx-background-color: #3498db; -fx-text-fill: white;" />
                </HBox>
            </children>
        </VBox>
    </content>
</ScrollPane>