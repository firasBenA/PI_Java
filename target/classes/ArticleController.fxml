<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.ArticleController">
   <Label alignment="CENTER" prefHeight="30.0" prefWidth="560.0" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Articles" />

   <GridPane alignment="CENTER" hgap="10" prefHeight="270.0" prefWidth="170.0" vgap="10">
      <Label text="Titre:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
      <TextField fx:id="titreField" prefHeight="26.0" prefWidth="277.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />

      <Label text="Contenue:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
      <TextArea fx:id="contenueField" prefHeight="182.0" prefWidth="454.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />

      <Label text="Image Path:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
      <TextField fx:id="imageField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      <columnConstraints>
         <ColumnConstraints />
         <ColumnConstraints />
      </columnConstraints>
      <rowConstraints>
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
      </rowConstraints>
   </GridPane>

   <HBox alignment="CENTER" spacing="10">
      <Button onAction="#addArticle" text="Ajouter" />
      <Button onAction="#updateArticle" text="Modifier" />
      <Button onAction="#deleteArticle" text="Supprimer" />
      <Button onAction="#switchToEvenement" text="Les evenements" />
   </HBox>

   <TableView fx:id="articleTable" prefHeight="206.0" prefWidth="560.0">
      <columns>
         <TableColumn prefWidth="150" text="Titre">
            <cellValueFactory><PropertyValueFactory property="titre" /></cellValueFactory>
         </TableColumn>
         <TableColumn prefWidth="200" text="Contenue">
            <cellValueFactory><PropertyValueFactory property="contenue" /></cellValueFactory>
         </TableColumn>
         <TableColumn prefWidth="150" text="Image">
            <cellValueFactory><PropertyValueFactory property="image" /></cellValueFactory>
         </TableColumn>
      </columns>
   </TableView>
</VBox>
