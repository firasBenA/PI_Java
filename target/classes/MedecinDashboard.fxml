<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.MedecinDashboardController" style="-fx-background-color: #f0f0f0;">
    <!-- Sidebar -->
    <left>
        <VBox spacing="10" style="-fx-background-color: #2c3e50; -fx-padding: 20; -fx-pref-width: 200;">
            <Label text="Tableau de Bord Médecin" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white; -fx-padding: 0 0 20 0;"/>
            <Button fx:id="evenementButton" text="Événements" onAction="#showEvenements" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-pref-width: 160;"/>
            <Button fx:id="articleButton" text="Articles" onAction="#showArticles" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-pref-width: 160;"/>
        </VBox>
    </left>

    <!-- Main Content Area -->
    <center>
        <ScrollPane fx:id="contentArea" fitToWidth="true" style="-fx-background-color: #f0f0f0;">
            <VBox fx:id="contentVBox" spacing="20" style="-fx-padding: 20;"/>
        </ScrollPane>
    </center>
</BorderPane>