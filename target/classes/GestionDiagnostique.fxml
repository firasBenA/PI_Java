<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import java.lang.String?>
<AnchorPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.controllers.GestionDiagnostique"
            prefHeight="780.0" prefWidth="1080.0"
            style="-fx-background-color: #f4f6f9; -fx-font-family: 'Segoe UI';">

    <children>
        <ScrollPane fitToWidth="true" pannable="true" prefViewportHeight="780.0" prefViewportWidth="1080.0"
                    style="-fx-background-color: transparent; -fx-border-color: transparent;">
            <content>
                <VBox spacing="40" alignment="TOP_CENTER" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="30.0" AnchorPane.bottomAnchor="30.0">
                    <Label text="🩺 Système de Diagnostic Médical"
                           style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #1a2b3c; -fx-padding: 0 0 10 0;"
                         />

                    <!-- Symptom & Selected Symptom Section (Side by Side) -->
                    <HBox spacing="20" alignment="CENTER">
                        <!-- CARD: Symptoms -->
                        <VBox spacing="15" prefWidth="480"
                              style="-fx-background-color: #ffffff; -fx-padding: 25; -fx-border-radius: 12; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 8, 0.2, 0, 2);">
                            <children>
                                <Label text="🦠 Liste des symptômes"
                                       style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #1a2b3c;" />
                                <ListView fx:id="symptomsListView" prefHeight="250"
                                          style="-fx-border-color: #e0e0e0; -fx-border-radius: 8; -fx-background-radius: 8;" />
                                <Button fx:id="selectSymptomButton" text="Ajouter le symptôme ➕"
                                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10 20; -fx-border-radius: 8; -fx-background-radius: 8; -fx-cursor: hand;"
                                         />
                            </children>
                        </VBox>

                        <!-- CARD: Selected Symptoms -->
                        <VBox spacing="15" prefWidth="480"
                              style="-fx-background-color: #ffffff; -fx-padding: 25; -fx-border-radius: 12; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 8, 0.2, 0, 2);">
                            <children>
                                <Label text="📋 Symptômes sélectionnés"
                                       style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #1a2b3c;" />
                                <TextArea fx:id="selectedSymptomsArea" prefHeight="250" editable="false" wrapText="true"
                                          promptText="Les symptômes sélectionnés apparaîtront ici"
                                          style="-fx-background-color: #f7f9fc; -fx-border-color: #e0e0e0; -fx-border-radius: 8; -fx-background-radius: 8; -fx-font-size: 14px;" />
                            </children>
                        </VBox>
                    </HBox>

                <!-- Diagnostic Form -->
                <VBox spacing="20" maxWidth="980"
                      style="-fx-background-color: #ffffff; -fx-padding: 25; -fx-border-radius: 12; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.12), 8, 0.2, 0, 2);">
                    <children>
                        <HBox spacing="30" alignment="CENTER">
                            <VBox spacing="8">
                                <Label text="👨‍⚕️ Médecin responsable"
                                       style="-fx-font-size: 14px; -fx-text-fill: #1a2b3c;" />
                                <ComboBox fx:id="doctorComboBox" prefWidth="300"
                                          style="-fx-background-color: #f7f9fc; -fx-border-color: #e0e0e0; -fx-border-radius: 8;" />
                            </VBox>
                            <VBox spacing="8">
                                <Label text="📍 Zone du corps"
                                       style="-fx-font-size: 14px; -fx-text-fill: #1a2b3c;" />
                                <TextField fx:id="zoneCorps" promptText="Ex : Tête, Bras, Jambes..." prefWidth="300"
                                           style="-fx-background-color: #f7f9fc; -fx-border-color: #e0e0e0; -fx-border-radius: 8; -fx-font-size: 14px;" />
                            </VBox>
                        </HBox>

                        <Button text="Lancer le diagnostic 🧠" onAction="#handleDiagnose"
                                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 12 20; -fx-border-radius: 8; -fx-background-radius: 8; -fx-cursor: hand;"
                                maxWidth="300" />
                    </children>
                </VBox>

                <!-- Diagnosis Result -->
                <VBox spacing="15" maxWidth="980"
                      style="-fx-background-color: #ffffff; -fx-padding: 25; -fx-border-radius: 12; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.12), 8, 0.2, 0, 2);">
                    <children>
                        <Label text="🧾 Résultat du diagnostic"
                               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #1a2b3c;" />
                        <Label fx:id="resultLabel" wrapText="true" prefHeight="120" prefWidth="970"
                               style="-fx-background-color: #f7f9fc; -fx-padding: 15 ; -fx-padding: 0 0 0 280; -fx-font-size: 16px; -fx-text-fill: #34495e; -fx-border-color: #e0e0e0; -fx-border-radius: 8; -fx-background-radius: 8;" />
                    </children>
                </VBox>

                <!-- Chatbot -->
                <VBox spacing="15" maxWidth="980"
                      style="-fx-background-color: #ffffff; -fx-padding: 25; -fx-border-radius: 12; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.12), 8, 0.2, 0, 2);">
                    <children>
                        <Label text="💬 Assistant Médical"
                               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #1a2b3c;" />
                        <ListView fx:id="chatListView" prefHeight="200"
                                  style="-fx-background-color: #f7f9fc; -fx-border-color: #e0e0e0; -fx-border-radius: 8; -fx-font-size: 14px;" />
                        <HBox spacing="10" alignment="CENTER">
                            <TextField fx:id="userInputField" prefWidth="800"
                                       promptText="Posez une question ou décrivez un symptôme..."
                                       style="-fx-background-color: #f7f9fc; -fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-border-radius: 8; -fx-background-radius: 8; -fx-font-size: 14px; -fx-padding: 10;" />
                            <Button fx:id="sendButton" text="Envoyer ➤" onAction="#sendMessage"
                                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10 20; -fx-border-radius: 8; -fx-background-radius: 8; -fx-cursor: hand;" />
                        </HBox>
                    </children>
                    </VBox>
                </VBox>
            </content>
        </ScrollPane>
    </children>
</AnchorPane>