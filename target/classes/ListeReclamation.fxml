<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="tn.esprit.controllers.ListeReclamation"
            prefHeight="500.0" prefWidth="700.0"
            styleClass="root-pane"
            stylesheets="@styles.css">

    <!-- Main container with padding -->
    <VBox spacing="15" alignment="CENTER" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="20.0">

        <!-- Title -->
        <Text text="Gestion des RÃ©clamations" styleClass="title"/>

        <!-- ListView for Reclamations -->
        <ListView fx:id="listViewReclamations" prefHeight="200" styleClass="list-view"/>

        <!-- Form Grid for Input Fields -->
        <GridPane hgap="10" vgap="10" alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" prefWidth="150.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="300.0" prefWidth="400.0"/>
            </columnConstraints>

            <Text text="ID :" GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="label"/>
            <TextField fx:id="TFid" promptText="ID (Auto rempli)" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="0" styleClass="text-field"/>

            <Text text="Sujet :" GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="label"/>
            <TextField fx:id="TFsujet" promptText="Sujet" GridPane.columnIndex="1" GridPane.rowIndex="1" styleClass="text-field"/>

            <Text text="Description :" GridPane.columnIndex="0" GridPane.rowIndex="2" styleClass="label"/>
            <TextField fx:id="TFdescription" promptText="Description" GridPane.columnIndex="1" GridPane.rowIndex="2" styleClass="text-field"/>

            <!-- Removed DatePicker (DPDate) and TFetat -->
        </GridPane>

        <!-- Buttons -->
        <HBox spacing="15" alignment="CENTER">
            <Button text="Ajouter" onAction="#Save" styleClass="button-primary"/>
            <Button text="Modifier" onAction="#Update" styleClass="button-secondary"/>
            <Button text="Supprimer" onAction="#Delete" styleClass="button-danger"/>
        </HBox>
    </VBox>

</AnchorPane>