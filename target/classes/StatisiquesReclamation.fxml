<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="tn.esprit.controllers.StatistiquesReclamationController"
            prefHeight="600.0" prefWidth="800.0"
            styleClass="root-pane"
            stylesheets="styles.css">

    <!-- Main container with padding -->
    <VBox spacing="20" alignment="CENTER" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="20.0">

        <!-- Title -->
        <Text text="Statistiques des Réclamations" styleClass="title"/>

        <!-- Charts container -->
        <HBox spacing="20" alignment="CENTER" VBox.vgrow="ALWAYS">

            <!-- PieChart -->
            <VBox spacing="10" alignment="TOP_CENTER" prefWidth="400.0">
                <Text text="Répartition des Réclamations (Pie Chart)" styleClass="label"/>
                <PieChart fx:id="pieChart" prefHeight="300" title="Répartition par État"/>
            </VBox>

            <!-- BarChart -->
            <VBox spacing="10" alignment="TOP_CENTER" prefWidth="400.0">
                <Text text="Nombre de Réclamations par État (Bar Chart)" styleClass="label"/>
                <BarChart fx:id="barChart" prefHeight="300" title="Nombre par État">
                    <xAxis>
                        <CategoryAxis label="État"/>
                    </xAxis>
                    <yAxis>
                        <NumberAxis label="Nombre"/>
                    </yAxis>
                </BarChart>
            </VBox>

        </HBox>

        <!-- Buttons -->
        <HBox spacing="15" alignment="CENTER">
            <Button text="Rafraîchir" onAction="#refreshCharts" styleClass="button-primary"/>
            <Button text="Fermer" onAction="#closeWindow" styleClass="button-secondary"/>
        </HBox>
    </VBox>
</AnchorPane>