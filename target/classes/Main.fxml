<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="tn.esprit.controllers.MainController"
            prefHeight="600.0" prefWidth="800.0">

    <!-- Left Sidebar for Navigation -->
    <left>
        <VBox spacing="10" style="-fx-padding: 10; -fx-background-color: #f4f4f4;">
            <Button text="Home" onAction="#goHome" style="-fx-pref-width: 150;" />
            <Button text="Diagnostique" onAction="#goDiagnostique" style="-fx-pref-width: 150;" />
            <Button text="Prescription" onAction="#goPrescription" style="-fx-pref-width: 150;" />
            <Button text="Gestion Médecin" onAction="#goGestionMedecin" style="-fx-pref-width: 150;" />
            <Button text="Gestion Réclamation" onAction="#goGestionReclamation" style="-fx-pref-width: 150;" />
            <Button text="Gestion Réponse" onAction="#goGestionReponse" style="-fx-pref-width: 150;" />
            <Button text="Gestion Patient" onAction="#goGestionPatient" style="-fx-pref-width: 150;" />
            <Button text="Statistiques" onAction="#goStatistiques" style="-fx-pref-width: 150;" />
            <Button text="Déconnexion" onAction="#handleLogout" style="-fx-pref-width: 150;" />
        </VBox>
    </left>

    <!-- Center Content Area -->
    <center>
        <StackPane fx:id="contentArea" BorderPane.alignment="CENTER" />
    </center>

</BorderPane>