<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="tn.esprit.controllers.MainController"
            prefHeight="600.0" prefWidth="800.0"
            stylesheets="styles.css">

    <!-- Left Sidebar for Navigation -->
    <left>
        <VBox spacing="10" styleClass="sidebar">
            <Label text="MedApp" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #FFFFFF; -fx-padding: 10;"/>
            <Button text="Accueil" onAction="#goHome" styleClass="sidebar-button" />
            <Button text="Diagnostique" onAction="#goDiagnostique" styleClass="sidebar-button" />
            <Button text="Prescription" onAction="#goPrescription" styleClass="sidebar-button" />
            <Button text="Gestion Médecin" onAction="#goGestionMedecin" styleClass="sidebar-button" />
            <Button text="Gestion Réclamation" onAction="#goGestionReclamation" styleClass="sidebar-button" />
            <Button text="Gestion Réponse" onAction="#goGestionReponse" styleClass="sidebar-button" />
            <Button text="Gestion Patient" onAction="#goGestionPatient" styleClass="sidebar-button" />
            <Button text="Statistiques" onAction="#goStatistiques" styleClass="sidebar-button" />
            <Button text="Déconnexion" onAction="#handleLogout" styleClass="logout-button" />
        </VBox>
    </left>

    <!-- Center Content Area -->
    <center>
        <StackPane fx:id="contentArea" BorderPane.alignment="CENTER" />
    </center>

</BorderPane>