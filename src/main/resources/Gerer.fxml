<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<TabPane xmlns:fx="http://javafx.com/fxml" fx:controller="tn.esprit.controllers.GererController" style="-fx-background-color: #f4f6f9;">
    <tabs>
        <Tab text="Événements" closable="false">
            <content>
                <AnchorPane style="-fx-background-color: #f4f6f9;">
                    <ScrollPane layoutX="10" layoutY="10" prefWidth="780" prefHeight="300" style="-fx-background-color: #ffffff; -fx-border-color: #e0e0e0; -fx-border-radius: 8; -fx-background-radius: 8;">
                        <content>
                            <VBox fx:id="evenementContainer" spacing="15" style="-fx-padding: 15;" />
                        </content>
                    </ScrollPane>
                    <VBox layoutX="10" layoutY="320" spacing="20" prefWidth="780">
                        <padding>
                            <Insets top="15" right="15" bottom="15" left="15" />
                        </padding>
                        <Label text="Ajouter/Modifier Événement" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-font-family: 'Arial';" />
                        <HBox spacing="15">
                            <VBox spacing="8" prefWidth="380">
                                <Label text="Nom" style="-fx-font-size: 14px; -fx-text-fill: #34495e; -fx-font-family: 'Arial';" />
                                <TextField fx:id="evenementNomField" promptText="Nom" prefWidth="380" style="-fx-font-size: 14px; -fx-padding: 10; -fx-border-color: #e0e0e0; -fx-border-radius: 5; -fx-background-radius: 5; -fx-background-color: #ffffff; -fx-font-family: 'Arial';" />
                                <Label text="Contenu" style="-fx-font-size: 14px; -fx-text-fill: #34495e; -fx-font-family: 'Arial';" />
                                <TextArea fx:id="evenementContenueField" promptText="Contenu" prefHeight="80" prefWidth="380" style="-fx-font-size: 14px; -fx-padding: 10; -fx-border-color: #e0e0e0; -fx-border-radius: 5; -fx-background-radius: 5; -fx-background-color: #ffffff; -fx-font-family: 'Arial';" />
                                <Label text="Type" style="-fx-font-size: 14px; -fx-text-fill: #34495e; -fx-font-family: 'Arial';" />
                                <TextField fx:id="evenementTypeField" promptText="Type" prefWidth="380" style="-fx-font-size: 14px; -fx-padding: 10; -fx-border-color: #e0e0e0; -fx-border-radius: 5; -fx-background-radius: 5; -fx-background-color: #ffffff; -fx-font-family: 'Arial';" />
                            </VBox>
                            <VBox spacing="8" prefWidth="380">
                                <Label text="Statut" style="-fx-font-size: 14px; -fx-text-fill: #34495e; -fx-font-family: 'Arial';" />
                                <TextField fx:id="evenementStatutField" promptText="Statut" prefWidth="380" style="-fx-font-size: 14px; -fx-padding: 10; -fx-border-color: #e0e0e0; -fx-border-radius: 5; -fx-background-radius: 5; -fx-background-color: #ffffff; -fx-font-family: 'Arial';" />
                                <Label text="Lieu" style="-fx-font-size: 14px; -fx-text-fill: #34495e; -fx-font-family: 'Arial';" />
                                <TextField fx:id="evenementLieuxField" promptText="Lieu" prefWidth="380" style="-fx-font-size: 14px; -fx-padding: 10; -fx-border-color: #e0e0e0; -fx-border-radius: 5; -fx-background-radius: 5; -fx-background-color: #ffffff; -fx-font-family: 'Arial';" />
                                <Label text="Date" style="-fx-font-size: 14px; -fx-text-fill: #34495e; -fx-font-family: 'Arial';" />
                                <DatePicker fx:id="evenementDateField" promptText="Date" prefWidth="380" style="-fx-font-size: 14px; -fx-padding: 10; -fx-border-color: #e0e0e0; -fx-border-radius: 5; -fx-background-radius: 5; -fx-background-color: #ffffff; -fx-font-family: 'Arial';" />
                            </VBox>
                        </HBox>
                        <Label fx:id="evenementErrorLabel" style="-fx-font-size: 13px; -fx-font-family: 'Arial';" />
                        <HBox spacing="15" alignment="CENTER">
                            <Button text="Ajouter" onAction="#addEvenement" style="-fx-background-color: #1abc9c; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20; -fx-border-radius: 5; -fx-background-radius: 5; -fx-font-family: 'Arial';" />
                            <Button text="Modifier" onAction="#updateEvenement" style="-fx-background-color: #1abc9c; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20; -fx-border-radius: 5; -fx-background-radius: 5; -fx-font-family: 'Arial';" />
                            <Button text="Supprimer" onAction="#deleteEvenement" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20; -fx-border-radius: 5; -fx-background-radius: 5; -fx-font-family: 'Arial';" />
                            <Button text="Effacer" onAction="#clearEvenementFields" style="-fx-background-color: #bdc3c7; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20; -fx-border-radius: 5; -fx-background-radius: 5; -fx-font-family: 'Arial';" />
                        </HBox>
                    </VBox>
                </AnchorPane>
            </content>
        </Tab>
        <Tab text="Articles" closable="false">
            <content>
                <AnchorPane style="-fx-background-color: #f4f6f9;">
                    <ScrollPane layoutX="10" layoutY="10" prefWidth="780" prefHeight="300" style="-fx-background-color: #ffffff; -fx-border-color: #e0e0e0; -fx-border-radius: 8; -fx-background-radius: 8;">
                        <content>
                            <VBox fx:id="articleContainer" spacing="15" style="-fx-padding: 15;" />
                        </content>
                    </ScrollPane>
                    <VBox layoutX="10" layoutY="320" spacing="20" prefWidth="780">
                        <padding>
                            <Insets top="15" right="15" bottom="15" left="15" />
                        </padding>
                        <Label text="Ajouter/Modifier Article" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-font-family: 'Arial';" />
                        <HBox spacing="15">
                            <VBox spacing="8" prefWidth="380">
                                <Label text="Titre" style="-fx-font-size: 14px; -fx-text-fill: #34495e; -fx-font-family: 'Arial';" />
                                <TextField fx:id="articleTitreField" promptText="Titre" prefWidth="380" style="-fx-font-size: 14px; -fx-padding: 10; -fx-border-color: #e0e0e0; -fx-border-radius: 5; -fx-background-radius: 5; -fx-background-color: #ffffff; -fx-font-family: 'Arial';" />
                                <Label text="Contenu" style="-fx-font-size: 14px; -fx-text-fill: #34495e; -fx-font-family: 'Arial';" />
                                <TextArea fx:id="articleContenueField" promptText="Contenu" prefHeight="80" prefWidth="380" style="-fx-font-size: 14px; -fx-padding: 10; -fx-border-color: #e0e0e0; -fx-border-radius: 5; -fx-background-radius: 5; -fx-background-color: #ffffff; -fx-font-family: 'Arial';" />
                            </VBox>
                            <VBox spacing="8" prefWidth="380">
                                <Label text="Image" style="-fx-font-size: 14px; -fx-text-fill: #34495e; -fx-font-family: 'Arial';" />
                                <HBox spacing="10">
                                    <Button fx:id="articleImageButton" text="Choisir une image" style="-fx-background-color: #1abc9c; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20; -fx-border-radius: 5; -fx-background-radius: 5; -fx-font-family: 'Arial';" />
                                    <Label fx:id="articleImageLabel" text="Image: Aucune" style="-fx-font-size: 13px; -fx-text-fill: #34495e; -fx-font-family: 'Arial';" />
                                </HBox>
                                <Label text="Événements Associés" style="-fx-font-size: 14px; -fx-text-fill: #34495e; -fx-font-family: 'Arial';" />
                                <ComboBox fx:id="articleEvenementCombo" promptText="Sélectionner des événements" prefWidth="380" style="-fx-font-size: 14px; -fx-padding: 10; -fx-border-color: #e0e0e0; -fx-border-radius: 5; -fx-background-radius: 5; -fx-background-color: #ffffff; -fx-font-family: 'Arial';" />
                            </VBox>
                        </HBox>
                        <Label fx:id="articleErrorLabel" style="-fx-font-size: 13px; -fx-font-family: 'Arial';" />
                        <HBox spacing="15" alignment="CENTER">
                            <Button text="Ajouter" onAction="#addArticle" style="-fx-background-color: #1abc9c; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20; -fx-border-radius: 5; -fx-background-radius: 5; -fx-font-family: 'Arial';" />
                            <Button text="Modifier" onAction="#updateArticle" style="-fx-background-color: #1abc9c; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20; -fx-border-radius: 5; -fx-background-radius: 5; -fx-font-family: 'Arial';" />
                            <Button text="Supprimer" onAction="#deleteArticle" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20; -fx-border-radius: 5; -fx-background-radius: 5; -fx-font-family: 'Arial';" />
                            <Button text="Effacer" onAction="#clearArticleFields" style="-fx-background-color: #bdc3c7; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20; -fx-border-radius: 5; -fx-background-radius: 5; -fx-font-family: 'Arial';" />
                        </HBox>
                    </VBox>
                </AnchorPane>
            </content>
        </Tab>
    </tabs>
</TabPane>