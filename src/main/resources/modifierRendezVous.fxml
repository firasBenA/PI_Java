<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.ModifierRendezVousController">
    <children>
        <VBox alignment="CENTER" spacing="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
            <children>
                <Text text="Modifier Rendez-vous" style="-fx-font-size: 24; -fx-font-weight: bold;" />

                <GridPane hgap="10.0" vgap="10.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" prefWidth="150.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" prefWidth="200.0" />
                    </columnConstraints>
                    <children>
                        <!-- Date Field -->
                        <Label text="Date:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                        <DatePicker fx:id="datePicker" GridPane.rowIndex="0" GridPane.columnIndex="1" />
                        <Label fx:id="dateError" textFill="RED" GridPane.rowIndex="1" GridPane.columnIndex="1" />

                        <!-- Type Field -->
                        <Label text="Type:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                        <ComboBox fx:id="typeComboBox" GridPane.rowIndex="2" GridPane.columnIndex="1" />
                        <Label fx:id="typeError" textFill="RED" GridPane.rowIndex="3" GridPane.columnIndex="1" />

                        <!-- Cause Field -->
                        <Label text="Cause:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
                        <TextArea fx:id="causeTextArea" prefHeight="100.0" prefWidth="200.0" GridPane.rowIndex="4" GridPane.columnIndex="1" />
                        <Label fx:id="causeError" textFill="RED" GridPane.rowIndex="5" GridPane.columnIndex="1" />
                    </children>
                </GridPane>

                <HBox alignment="CENTER" spacing="20.0">
                    <children>
                        <Button fx:id="btnValider" mnemonicParsing="false" onAction="#handleValider" text="Valider" />
                        <Button fx:id="btnAnnuler" mnemonicParsing="false" onAction="#handleAnnuler" text="Annuler" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>