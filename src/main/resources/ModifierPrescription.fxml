<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" alignment="CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="tn.esprit.controllers.ModifierPrescriptionController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Modifier Prescription" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <TextField fx:id="titreField" promptText="Titre" />
    <TextArea fx:id="contenueField" promptText="Contenu" prefRowCount="4" />
    <DatePicker fx:id="datePicker" />

    <Label fx:id="errorLabel" style="-fx-text-fill: red;" />

    <Button text="Enregistrer les modifications" onAction="#modifierPrescription" />
</VBox>
