<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="tn.esprit.controllers.ListeReclamation"
            prefHeight="600.0" prefWidth="800.0"
            styleClass="root-pane wave-background"
            stylesheets="./styles.css">


    <VBox spacing="20" alignment="CENTER" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="20.0">

        <Text text="Gestion des Réclamations" styleClass="title"/>

        <!-- ScrollPane containing the CardPane (HBox for horizontal cards) -->
        <ScrollPane fitToHeight="true" prefHeight="260.0" styleClass="scroll-pane" hbarPolicy="ALWAYS" vbarPolicy="NEVER">
            <HBox fx:id="cardPane" spacing="20" styleClass="card-container"/>
        </ScrollPane>

        <!-- Pagination Controls -->
        <HBox spacing="10" alignment="CENTER">
            <Button fx:id="prevButton" text="Précédent" onAction="#goToPreviousPage" styleClass="button-secondary"/>
            <Label fx:id="pageLabel" text="Page 1 of 1" styleClass="label"/>
            <Button fx:id="nextButton" text="Suivant" onAction="#goToNextPage" styleClass="button-primary"/>
        </HBox>

        <GridPane hgap="10" vgap="10" alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" prefWidth="150.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="300.0" prefWidth="400.0"/>
            </columnConstraints>

            <Text text="Sujet :" GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="label"/>
            <TextField fx:id="TFsujet" promptText="Sujet" GridPane.columnIndex="1" GridPane.rowIndex="0" styleClass="text-field"/>

            <Text text="Description :" GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="label"/>
            <TextArea fx:id="TFdescription" promptText="Description" prefRowCount="4" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="1" styleClass="text-field"/>
        </GridPane>

        <!-- Buttons -->
        <HBox spacing="20" alignment="CENTER">
            <Button text="Ajouter" onAction="#Save" styleClass="button-primary"/>
            <Button text="Modifier" onAction="#Update" styleClass="button-secondary"/>
            <Button text="Supprimer" onAction="#Delete" styleClass="button-danger"/>
        </HBox>
    </VBox>
</AnchorPane>